<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Marge"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/option_shape"
        android:textSize="30sp"
        android:textColor="@color/textLib"
        android:textAlignment="center"
        android:id="@+id/marge" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="LibellÃ©"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/libelleVente"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textLib"
            android:background="@color/Tableau"
            android:layout_weight="1" />

        <TextView
            android:text="Objectif"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/objectifVente"
            android:textAlignment="center"
            android:textColor="@color/textLib"
            android:textSize="20dp"
            android:background="@color/Tableau"
            android:layout_weight="1" />

        <TextView
            android:text="Reel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/reelVente"
            android:textAlignment="center"
            android:textColor="@color/textLib"
            android:textSize="20dp"
            android:background="@color/Tableau"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lib1"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_weight="1" />

        <TextView
            android:text="1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:id="@+id/value1"
            android:layout_weight="1" />

        <TextView
            android:text="800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:id="@+id/value2"
            android:layout_weight="1" />
    </LinearLayout>
    <ListView
        android:id="@+id/listMarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>