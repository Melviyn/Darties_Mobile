<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/adresse"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/prenom"
        android:layout_alignStart="@+id/prenom"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INFORMATION COMPTE"
        android:id="@+id/libelle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/pwd"
        android:layout_marginTop="33dp"
        android:textSize="16sp"
        android:layout_below="@+id/adresse"
        android:layout_alignStart="@+id/adresse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/id"
        android:layout_marginTop="37dp"
        android:textSize="16sp"
        android:layout_below="@+id/libelle"
        android:layout_alignStart="@+id/nom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nom"
        android:layout_marginStart="31dp"
        android:layout_marginTop="26dp"
        android:textSize="16sp"
        android:layout_below="@+id/id"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/prenom"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:layout_below="@+id/nom"
        android:layout_alignStart="@+id/nom" />

</RelativeLayout>