<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="116dp"
        android:layout_height="74dp"

        android:weightSum="1"
        android:layout_weight="0.79">

        <TextView
            android:text="Titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_login"
            android:id="@+id/titleNotif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#ec0c0c"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="Vous n'avez pas saisi les donnees sur la periode de temps concernee : 11-01-2017 au 20-01-2017"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#0a0000"
            android:id="@+id/msgNotif"
            android:width="500dp"
            android:transformPivotX="0dp"
            android:layout_marginTop="1dp"
            android:textAlignment="center"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_margin="0dp"
            android:textSize="13sp" />
    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_height="74dp"
        android:layout_width="57dp"
        android:layout_weight="0.21">

        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateNotif"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>