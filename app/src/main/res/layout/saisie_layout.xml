<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    app:layout_collapseParallaxMultiplier="1.0"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:text="Mois actuelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:id="@+id/moisVentes" />


            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prodName"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Ventes Objectif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moisVentesObj"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Ventes Réel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moisVentesReel"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_weight="1.10"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp">

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moisVentesObjVal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_weight="1.03" />

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moisVentesReelVal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_weight="1.01" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/saisieVentes"
                android:textAlignment="center"
                style="@style/Widget.AppCompat.EditText"
                android:textColor="?attr/colorControlNormal"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="Saisie des ventes" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="0.01">

                <TextView
                    android:text="Marge Objectif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iedied"
                    android:layout_weight="0.52"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Marge Réel"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0.26" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/margeObj"
                    android:layout_weight="1.09"
                    android:textAlignment="center" />

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/margeReel"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/SaisiMarge"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                style="@style/Widget.AppCompat.EditText"
                android:textSize="20sp"
                android:textColor="?attr/colorControlNormal"
                android:layout_marginTop="10dp"
                android:hint="Saisie de la marge" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="27dp">

                <TextView
                    android:text="Chiffre d'affaire Objectif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textAlignment="textStart"
                    android:layout_weight="0.68"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Chiffre d'affaire Réel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caObj"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:text="0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caReel"
                    android:layout_weight="0.95"
                    android:textAlignment="center" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/SaisiChiffreAffaire"
                android:layout_marginTop="10dp"
                android:hint="Saisie du Chiffre d'affaire"
                style="@style/Widget.AppCompat.EditText"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hapticFeedbackEnabled="true" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_weight="0.06"
                android:layout_marginLeft="55dp"
                android:checkedButton="@+id/positif"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:text="Positif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/positif"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="negatif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/negatif"
                    android:layout_weight="1" />

            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:text="valider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/next"
                    android:layout_weight="1"
                    android:visibility="invisible" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>